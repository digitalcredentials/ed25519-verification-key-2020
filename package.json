{
  "name": "@digitalcredentials/ed25519-verification-key-2020",
  "version": "5.0.0-beta.2",
  "description": "Javascript library for generating and working with Ed25519VerificationKey2020 key pairs, for use with crypto-ld.",
  "scripts": {
    "build-esm": "tsc -p tsconfig.esm.json",
    "build-types": "tsc -p tsconfig.types.json",
    "build-test": "tsc -p tsconfig.spec.json",
    "build": "npm run clear && npm run build-types && npm run build-esm",
    "clear": "rimraf dist/*",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npm run build",
    "prettier": "prettier src --write",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run lint && npm run test-node",
    "test-node": "npm run build-test && mocha dist/test/*.spec.js"
  },
  "homepage": "https://github.com/digitalcredentials/ed25519-verification-key-2020",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitalcredentials/ed25519-verification-key-2020.git"
  },
  "license": "BSD-3-Clause",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@digitalcredentials/ssi": "^3.0.4",
    "@digitalcredentials/keypair": "^2.0.5",
    "@noble/ed25519": "^1.7.5",
    "base-x": "^4.0.1"
  },
  "devDependencies": {
    "@digitalbazaar/ed25519-verification-key-2018": "^3.2.0",
    "@stablelib/ed25519": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jose": "^4.11.1",
    "mocha": "^10.2.0",
    "multibase": "^4.0.4",
    "multicodec": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "browser": {
    "buffer": false,
    "crypto": false,
    "util": false,
    "promisify": false,
    "./src/ed25519.ts": "./src/ed25519-browser.ts",
    "./dist/ed25519.js": "./dist/ed25519-browser.js"
  },
  "react-native": {
    "buffer": false,
    "crypto": false,
    "util": false,
    "promisify": false,
    "./src/ed25519.ts": "./src/ed25519-reactnative.ts",
    "./dist/ed25519.js": "./dist/ed25519-reactnative.js"
  },
  "engines": {
    "node": ">=20"
  }
}
